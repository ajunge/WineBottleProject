<section class="module-small bg-dark bg-dark-60" data-background="assets/images/section-4.jpg" style="background-image: url(https://images.unsplash.com/8/berries.jpg?q=80&fm=jpg&s=45284c5ae659504d4bce1bf0328f359f);">
      <div class="container">

        <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
            <h1 class="module-title font-alt">Sign Up</h1>
          </div>
        </div><!-- .row -->
      </div>
    </section>



<div class="container signup">
<div class="col-sm-5 col-sm-offset-1 mb-sm-40">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true %>
  </div> <br>

  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div> <br>

    <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div> <br>

  <div class="field">
    <%= f.label  :country %><br>
    <%= f.text_field :country %>
  </div> <br>

  <div class="field">
    <%= f.label :business_name %><br>
    <%= f.text_field :business_name %>
  </div> <br>

</div>
<div class="col-sm-5">
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div><br>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div><br>

  <div class="field">
    <%= f.label "Is this account for a vineyard?" %> 
    <%= f.check_box :is_vineyard %> 
  </div><br>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %><br>

</div>
</div>
</div>
